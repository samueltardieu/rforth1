	processor pic18f248
	radix dec
	org 0x2000
	goto init_runtime
	org 0x2008
	reset
	org 0x2018
	reset

;---------------------------------------------------------
; Section: constants
;---------------------------------------------------------

TBLPTRU equ 0xff8

TBLPTRH equ 0xff7

TBLPTRL equ 0xff6

TABLAT equ 0xff5

INDF0 equ 0xfef

POSTINC0 equ 0xfee

POSTDEC0 equ 0xfed

PREINC0 equ 0xfec

FSR0H equ 0xfea

FSR0L equ 0xfe9

STATUS equ 0xfd8

EECON1 equ 0xfa6

;---------------------------------------------------------
; Section: code
;---------------------------------------------------------

init_runtime
	movlw 0x5f
	movwf FSR0L,0
	clrf FSR0H,0

main
	movlw 3
	movwf PREINC0,0
	clrf PREINC0,0
	call word_nth
	movlw 2
	movwf PREINC0,0
	clrf PREINC0,0
	call byte_nth

_2drop
	movf POSTDEC0,w,0
	movf POSTDEC0,w,0
	movf POSTDEC0,w,0
	movf POSTDEC0,w,0
	return

flash_addr_EX_
	bcf INDF0,7,0
	bsf EECON1,7,0

table_addr_EX_
	clrf TBLPTRU,0
	call _1_GT_2
	movf POSTDEC0,w,0
	movff POSTDEC0,TBLPTRH
	movf POSTDEC0,w,0
	movff POSTDEC0,TBLPTRL
	bcf EECON1,6,0
	return

byte_nth
	movlw LOW(bytes_array)
	movwf PREINC0,0
	movlw HIGH(bytes_array)
	movwf PREINC0,0
	call op_plus

flashc_AT_
	call flash_addr_EX_
	tblrd*+
	movff TABLAT,PREINC0
	clrf PREINC0,0
	return

word_nth
	call _2_ST_
	movlw LOW(words_array)
	movwf PREINC0,0
	movlw HIGH(words_array)
	movwf PREINC0,0
	call op_plus

flash_AT_
	call flash_addr_EX_
	tblrd*+
	movff TABLAT,PREINC0
	clrf PREINC0,0
	tblrd*+
	movff TABLAT,INDF0
	return

op_plus
	movff POSTDEC0,temp_x1
	movf POSTDEC0,w,0
	movf POSTDEC0,f,0
	addwf POSTINC0,f,0
	movf temp_x1,w,0
	addwfc INDF0,f,0
	return

_1_GT_2
	movf INDF0,w,0
	clrf INDF0,0
	movwf PREINC0,0
	clrf PREINC0,0
	return

_2_ST_
	bcf STATUS,0,0
	movf POSTDEC0,w,0
	rlcf POSTINC0,f,0
	rlcf INDF0,f,0
	return

;---------------------------------------------------------
; Section: memory
;---------------------------------------------------------

temp_x1 equ 0x0

;---------------------------------------------------------
; Section: static data
;---------------------------------------------------------

words_array
	db 1,0,2,0,3,0,4,0
	db 15,0,232,3

bytes_array
	db 41,42,43

	END
